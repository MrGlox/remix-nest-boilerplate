{
  "name": "nestjs-remix-monorepo",
  "version": "1.0.0",
  "description": "A monorepo with a NestJS backend and a Remix frontend",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "start": "npm run start --filter server",
    "email:dev": "turbo email:dev",
    "clean-node-modules": "rm -rf {node_modules,package-lock.json} **/{node_modules,package-lock.json}",
    "clean-turbo-cache": "rm -rf .turbo **/.turbo"
  },
  "keywords": [
    "nestjs",
    "remix",
    "payload-cms",
    "monorepo"
  ],
  "author": "MrGlox",
  "license": "ISC",
  "packageManager": "pnpm@9.12.0",
  "pnpm": {
    "overrides": {
      "@swc/core": "^1.6.7"
    }
  },
  "prisma": {
    "schema": "apps/server/prisma/schema/schema.prisma",
    "seed": "tsx apps/server/src/database/seed.ts"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@prisma/client": "^6.0"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "prisma": "^6.0",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3"
  }
}
