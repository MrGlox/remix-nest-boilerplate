{
  "name": "@repo/server",
  "version": "0.0.1",
  "description": "NestJS backend for the Remix monorepo, also the endpoint for all the requests",
  "author": "<%= author %>",
  "private": true,
  "license": "UNLICENSED",
  "main": "./dist/core/remix/remix.service.js",
  "types": "./dist/core/remix/remix.service.d.ts",
  "scripts": {
    "dev": "nest start --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "tsc --build",
    "prisma:prestart": "prisma generate",
    "email:dev": "email dev -p 3001 --dir ./src/mailer/templates ",
    "start": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@nestjs/axios": "^3.1.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/terminus": "^10.2.3",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^6.0",
    "@react-email/components": "0.0.31",
    "@react-email/render": "^1.0.3",
    "@react-router/express": "^7.0.0",
    "add": "2.0.6",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.7",
    "express-session": "^1.18.0",
    "handlebars": "^4.7.8",
    "ioredis": "^5.3.2",
    "nestjs-i18n": "^10.5.0",
    "nodemailer": "^6.9.15",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "react-email": "3.0.4",
    "react-router": "^7.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "stripe": "^17.4.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@repo/cms": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/web": "workspace:*",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-local": "^1.0.38",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "prisma": "^6.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
